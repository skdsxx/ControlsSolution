<Application x:Class="WindowControlStyle.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WindowControlStyle"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup" DispatcherUnhandledException="Application_DispatcherUnhandledException"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Skins/WindowBaseStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <XmlDataProvider x:Key="Lang" Source="Languages/Chinese.xml" XPath="language/resources" IsAsynchronous="False"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
